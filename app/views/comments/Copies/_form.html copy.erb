<%= simple_form_for([@property, @comment || @property.comments.build], remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :content,
                  autofocus: true ,
                  id: "comment_content_#{property.id}" %>
    <%= f.text_area :content %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
