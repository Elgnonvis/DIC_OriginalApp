<% @comments.each do |comment| %>

<div class="feed-element">
  <div class="media-body" style="font-size:14px;">
    <span class="pull-right text-navy"><%= time_ago_in_words(comment.updated_at) %> ago</span>
    <strong><%= comment.user.username %></strong> updated this service request.

    <br>
    <small class="text-muted"><%= @property.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
    <div class="well" style="font-size:14px;">
      <%= comment.content.html_safe %>
      <% if current_user.username == comment.user.username %>
      <div class="actions">
      <%= link_to "Edit", edit_property_comment_path(comment.property, comment), :remote => true, class: 'btn btn-xs btn-primary'  %>
      <!-- <%= link_to "Edit", [@property, comment] , method: :patch, :remote => true, class: 'btn btn-xs btn-primary' %> -->
      <%= link_to "Delete", [@property, comment] , method: :delete, :remote => true,  data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-outline btn-inverse'  %>
      </div>
      <% end %>
    </div>

  </div>
</div>

<% end %>