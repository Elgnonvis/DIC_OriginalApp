<% comments.each do |comment| %>
  <div class="feed-element">
    <div class="media-body" style="font-size:14px;">
      <% if comment.id.present? %>  
        <div class="well" style="font-size:14px;">
          <div class="comment-content" id ="this_comment_<%= comment.id %>">
            <span class="pull-right text-navy"><%= time_ago_in_words(comment.created_at) %> ago</span>
            <strong><%= comment.user.username %></strong> commented this property.
              <br>
            <strong><%= t("comments.content") %> : </strong><%= comment.content %>
          </div>
          <% if current_user.username == comment.user.username %>
            <div class="actions mt-2">
              <%= link_to t("button.edit"), edit_property_comment_path(property, comment), remote: true, class: 'btn btn-xs btn-primary'  %>
              <%= link_to t("button.destroy"), property_comment_path(comment.property_id, comment.id), method: :delete, remote: true,  data: { confirm: 'Do you really want to delete this?' }, class: 'btn btn-xs btn-outline-danger'  %>
            </div>
          <% end %>
        </div> <br>
      <% end %>
    </div>
  </div>
<% end %>


