 <div class="mt-5"></div>  <br> <br>
 <div class="w-50 d-flex flex-column container justify-content-center align-itmes-center" style = "padding-top: 1rem; border: 1px solid;">
<h2><%= t(".title", resource: resource.model_name.human) %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, required: true, autofocus: true %> <br />
    <%= f.input :lastname, required: true,
                placeholder: 'Votre nom de famille' %> <br />
    <%= f.input :firstname, required: true,
                 placeholder: 'Votre prÃ©nom' %> <br />
    <%= f.input :profession, required: true,
                placeholder: 'Votre profession' %> <br />
    <%= f.input :contact, required: true,
                placeholder: 'Votre contact' %> <br />
    <%= f.input :address, required: true,
                placeholder: 'Votre addresse' %> <br />
    <%= f.input :email, required: true,
                placeholder: 'Votre e-mail' %> <br />

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></p>
    <% end %>

    <%= f.input :password,
                hint: t(".leave_blank_if_you_don_t_want_to_change_it"),
                required: false,
                input_html: { autocomplete: "new-password" } %> <br />
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %> <br />
    <%= f.input :current_password,
                hint: t(".we_need_your_current_password_to_confirm_your_changes"),
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(".update"), class:"btn btn-warning mt-2 mb-4" %>
  </div>
<% end %>

<h3><%= t(".cancel_my_account") %></h3>

<p><%= t(".unhappy") %> <%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete, class:"btn btn-outline-warning" %></p>

<%= link_to t("devise.shared.links.back"), :back, class:"btn btn-outline-success mb-2" %>

</div> 
