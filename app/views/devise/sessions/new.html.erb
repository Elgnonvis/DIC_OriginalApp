<div class="w-50 d-flex flex-column container justify-content-center align-itmes-center" style = "padding-top: 1rem; border: 1px solid;">
  <div><img style = "padding-bottom: 1rem;" src="" class="img-fluid" alt="" ></div>
  <h2><%= t(".sign_in") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :login,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "login" } %> <br>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %> <br>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, t(".sign_in"), class:"btn btn-success mt-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>