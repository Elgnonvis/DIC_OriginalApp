<div class="w-50 d-flex flex-column container justify-content-center align-itmes-center" style = "padding-top: 1rem; border: 1px solid;">
  <h2><%= t(".forgot_your_password") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  placeholder: 'Votre addresse mail'
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div> <br>

    <div class="form-actions">
      <%= f.button :submit, t(".send_me_reset_password_instructions"), class:"btn btn-outline-danger" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
