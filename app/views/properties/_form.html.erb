
<%= simple_form_for(@property)  do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="form-group mt-3 mb-3">
        <%= f.input :type_of_property, collection:{House: :H, Villa: :V, Duplex: :D, Offfice: :O, Shop: :S, Studio: :T}, include_blank: false, id: "type_of_property" %>
    </div>
    <div class="form-group mt-3 mb-3">
        <%= f.input :status, collection:{Occupied: :O, Vaccant: :V}, include_blank: false, id: "status" %>
    </div>
    <div class="form-group mt-3 mb-3">
      <%= f.input :name %>
    </div>
    <div class="form-group mt-3 mb-3">
      <%= f.input :description %>
    </div>      

    <div class="form-group mt-3 mb-3">
      <%= image_tag(@property.illustration.url) if @property.illustration && @property.illustration.url %>
      <%= f.input :illustration, as: :file, wrapper: :horizontal_file %> <br>
      <%= f.hidden_field :illustration_cache %>
    </div>

    <div class="form-group mt-3 mb-3">
       <%= f.input :address %>
    </div>
     <div class="form-group mt-3 mb-3">
      <%= f.input :price %> FCFA
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-success mb-5"  %>
  </div>
<% end %>
