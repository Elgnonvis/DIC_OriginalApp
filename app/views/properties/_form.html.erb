
<%= simple_form_for(@property)  do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="form-group mt-3 mb-3">
      <%= f.input :type_of_property, :collection => ["House", "Villa", "Duplex", "Office", "Shop", "Studio"],:input_html => { :class => 'form-control'}, id: "type_of_property", include_blank: false %>
    </div>
    <div class="form-group mt-3 mb-3">
      <%= f.input :status, :collection => ["Occupied", "Vaccant"],:input_html => { :class => 'form-control'}, id: "status", include_blank: false %>
    </div>
    <div class="form-group mt-3 mb-3">
      <%= f.input :name %>
    </div>
    <div class="form-group mt-3 mb-3">
      <%= f.input :description %>
    </div> 

    <div class="form-group mb-3">
       <%= f.input :address %>
    </div>
     <div class="form-group mt-3 mb-3">
      <%= f.input :price %>
    </div>
  </div>

   <hr />
  
  <%= f.fields_for :post_attachments do |p| %>
    <div class="form-group mt-3 mb-3">
      <%= p.file_field :illustration, :multiple => true, name: "images[illustration][]" , :class => 'form-control'%>

      <%= p.hidden_field :illustration_cache %>
      <%= p.input :title %>
    </div>
    
  <% end %>


  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-success mb-5"  %>
  </div>
<% end %>
