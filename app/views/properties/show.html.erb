<div class="d-flex flex-column container justify-content-center align-itmes-center" style = "padding-top: 1rem;">

      <div class="d-flex flex-column justify-content-center align-itmes-center card text-center" style=""> <br>
        <div class="card-img-top">
            <%= image_tag(@property.illustration.url) if @property.illustration.url%>
        </div>
        <div class="card-body">
            <p class="card-text text-justify"><%= @property.description %></p>
        </div><br>
        <blockquote class="blockquote mb-0">
          <footer class="blockquote-footer">
            Post√© par : <cite title="Source Title"><%= @property.user.username %></cite>
          </footer> 
        </blockquote>
      </div>

      <div class="d-flex flex-row justify-content-center align-itmes-center form-actions mb-4"> 
        <% if @property.user == current_user %>
            <a class="btn btn-warning w-25 m-4" href = "<%= edit_property_path(@property)%>">Modifier</a> 
        <% end %>
            <a class="btn btn-primary w-25 m-4" href = "<%= properties_path %>"> Properties</a>        
      </div>

<% if @property.user == current_user %>
    <a class="btn btn-danger w-25 m-4" href = "<%= edit_property_path(@property)%>">Edit</a> 
  <% end %>|
<%= link_to 'Back', properties_path %>

