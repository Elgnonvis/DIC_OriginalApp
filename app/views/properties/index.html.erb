<div class="container text-center">
  <h1>Properties List</h1><br>
  <div class ='table-responsive'>

   <div class="d-flex">   
      <div class=" me-5">
        <a href = "<%= properties_path(sort_expired: "true") %>" class="btn btn-primary">Sort by end deadline</a>
      </div>
      <div class="me-5">
        <a href = "<%= properties_path(sort_priority: "true") %>" class="btn btn-primary me-5">Sort by priority </a>
       
      </div>
      <div class="ml-5">
        <a href = "<%= new_property_path  %>" class="btn btn-primary">New Property </a>
      </div>
  </div><br>

 <table class = "table table-striped table-hover border" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Type of property</th>
      <th>Description</th>
      <th>Address</th>
      <th>Price</th>
      <th>Status</th>
      <th>Posted by</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td class="type_row"><%= property.type_of_property %></td>
        <td><%= truncate(property.description , length: 20) %></td>
        <td><%= truncate(property.address, length: 15) %></td>
        <td><%= property.price %></td>
        <td class="status_row"><%= property.status %></td>
        <td><%= property.user.username %></td>
        <td>
          <a href = "<%= property_path(property.id) %>" class="btn btn-primary">Show</a>
          <a href = "<%= edit_property_path(property) %>" class="btn btn-warning">Edit</a>
          <a href = "<%= property_path(property.id) %>" class="btn btn-danger", data-confirm="Are you sure?" data-method="DELETE">Destroy</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="container pagination justify-content-center" >
    <%= paginate @properties, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
</div>
  