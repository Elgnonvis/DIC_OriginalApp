<p id="notice"><%= notice %></p>

<div class="container text-center">
  <h1>Properties List</h1><br>
  <div class ='table-responsive '>
   <div class="d-flex">
      <div class=" mr-5">
        <a href = "<%= properties_path(sort_expired: "true") %>" class="btn btn-primary">Sort by end deadline</a>
      </div>
      <div class="">
        <a href = "<%= properties_path(sort_priority: "true") %>" class="btn btn-primary">Sort by priority </a>
      </div>
  </div> <br>


 <table class = "table table-striped table-hover border" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Type of property</th>
      <th>Description</th>
      <th>Illustration</th>
      <th>Address</th>
      <th>Price</th>
      <th>Status</th>
      <th>Posted by</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td class="type_row"><%= property.type_of_property %></td>
        <td><%= truncate(property.description , length: 50) %></td>
        <td><%= property.illustration %></td>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td class="status_row"><%= property.status %></td>
        <td><%= property.user.username %></td>
        <td>
          <%= link_to 'Show', property %>
          <%= link_to 'Edit', edit_property_path(property) %>
          <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Property', new_property_path %>
<div class="container pagination justify-content-center" >
    <%= paginate @properties, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
</div>

