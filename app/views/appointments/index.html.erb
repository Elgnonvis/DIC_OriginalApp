
<div class="container text-center">
  <h1>Appointments</h1><br>

  <div class ='table-responsive'>
    <div class="">
      <a href = "<%= new_appointment_path  %>" class="btn btn-primary">New Appointment</a>
    </div> <br >


    <table class = "table table-striped table-hover border" >
      <thead>
        <tr>
          <th>Description</th>
          <th>Status</th>
          <th>Date</th>
          <th>Resquested by</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= truncate(appointment.description , length: 20) %></td>
            <td><%= appointment.status %></td>
            <td><%= appointment.date %></td>
            <td><%= appointment.user.username %></td>
            <td>
              <a href = "<%= appointment_path(appointment.id) %>" class="btn btn-primary">Show</a>
              <a href = "<%= edit_appointment_path(appointment) %>" class="btn btn-warning">Edit</a>
              <a href = "<%= appointment_path(appointment.id) %>" class="btn btn-danger", data-confirm="Are you sure?" data-method="DELETE">Destroy</a>
            </td>
            
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="container pagination justify-content-center" >
      <%= paginate @appointments, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
  </div>

</div>
