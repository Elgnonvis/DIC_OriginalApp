<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="form-group mt-3 mb-3">
      <%= f.input :description, placeholder: "L'objet de votre demande de rendez-vous", autofocus: true %>
    </div>

    <div class="form-group mt-3 mb-3">
      <%= f.input :status, :collection => ["Low", "Medium", "High"],:input_html => { :class => 'form-control'}, prompt: "Choose From List" %>
    </div>
    <div class="form-group mt-3 mb-3">
      <%= f.input :date, id: "date" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-success mb-2 w-100"  %>
  </div>
<% end %>
