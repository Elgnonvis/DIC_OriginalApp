<header class="p-2 bg-primary text-white fixed-top ">
    <div class="container-fluid row d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
     
        <div class="col-3">
            <a href="/" class="navbar-brand mb-2 mb-lg-0 text-white"><span class="fb">OnlineEstateAgency | Home </span></a>
        </div>
        
        <div class=" col-9">
            <% if user_signed_in? %> 
              <div class="row">
                <div class="col-8 ">
                  <div class="form-group d-flex justify-content-center mb-2 mb-lg-0 ">
                    <a href="<%= properties_path %>" class="btn btn-warning me-5 ml-5" role="button">Properties</a>
                    <a href="<%= me_appointments_path %>" class="btn btn-success me-5 " role="button">My Appointments</a>
                    <% if current_user.is_admin %>
                      <a href="<%= rails_admin_path %>" class="btn btn-info ml-2 " role="button">Management</a>
                    <% end %>
                  </div>  
                </div>
                <div class=" col-4  text-end text-decoration-none">
                <a class ="btn btn-info" href="<%= contact_path %>" role="button">Nous contacter</a>

                  <%= link_to "Profile", profil_path, class:"btn btn-success me-2" %>
                  <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"btn btn-danger" %>
                </div> 
            <% else %>
              <div class="col-12 text-end text-decoration-none">
                <%= link_to 'Admin Guest ', guest_admin_path, method: :post, class: " me-2 btn btn-success "%>
                <%= link_to 'Guest user', guest_user_path, method: :post, class: " me-2 btn btn-info "%>
                <a class="btn btn-success me-2" href="<%= new_user_session_path %>" role="button">Login</a>
                <a class="btn btn-warning me-2" href="<%= new_user_registration_path %>" role="button">Sign Up</a>
                <a class ="btn btn-info" href="<%= contact_path %>" role="button">Nous contacter</a>
                
              </div> 
              </div>
            <% end %>
        </div> 
    </div>
</header>